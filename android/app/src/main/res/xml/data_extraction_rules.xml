<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app data in cloud backups (Android 12+) -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        
        <!-- Exclude cache -->
        <exclude domain="file" path="cache/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Data transferred during device-to-device migration -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
    </device-transfer>
</data-extraction-rules>
