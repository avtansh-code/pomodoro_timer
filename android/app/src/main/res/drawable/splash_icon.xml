<?xml version="1.0" encoding="utf-8"?>
<!-- Adds 25% padding on all sides to ensure the logo is fully visible
     Android 12+ splash screens require icons to fit within a safe zone -->
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@drawable/launch_logo"
    android:insetLeft="25%"
    android:insetTop="25%"
    android:insetRight="25%"
    android:insetBottom="25%" />
