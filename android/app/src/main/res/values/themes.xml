<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 
        Material Design 3 Theme for Pomodoro Timer
        Following Android Design Guidelines:
        - Material 3 (Material You) design system
        - Dynamic color support
        - Edge-to-edge display
        - Proper elevation and surface tints
    -->
    
    <!-- Splash Screen Theme -->
    <style name="Theme.PomodoroTimer.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.PomodoroTimer</item>
    </style>

    <!-- Base Material 3 Light Theme -->
    <style name="Theme.PomodoroTimer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (used for key components) -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Secondary brand color (supporting color) -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- Tertiary brand color (accent color) -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <!-- Error color (for error states) -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <!-- Background color (main app background) -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- Surface color (cards, sheets, menus) -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Outline color (borders and dividers) -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <!-- Inverse colors (for snackbars and tooltips) -->
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        
        <!-- Status bar color (edge-to-edge design) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Enable edge-to-edge -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        
        <!-- Shape system -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.PomodoroTimer.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.PomodoroTimer.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.PomodoroTimer.LargeComponent</item>
    </style>
    
    <!-- Shape Appearance Styles following Material 3 -->
    <style name="ShapeAppearance.PomodoroTimer.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.PomodoroTimer.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.PomodoroTimer.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Component Styles -->
    
    <!-- Button Styles -->
    <style name="Widget.PomodoroTimer.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAppearance">@style/TextAppearance.PomodoroTimer.Button</item>
        <item name="iconSize">18dp</item>
        <item name="iconPadding">8dp</item>
    </style>
    
    <style name="Widget.PomodoroTimer.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="Widget.PomodoroTimer.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.PomodoroTimer.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="Widget.PomodoroTimer.Card.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Text Appearance Styles -->
    <style name="TextAppearance.PomodoroTimer.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">64sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="lineHeight">72sp</item>
        <item name="android:letterSpacing">-0.0078</item>
    </style>
    
    <style name="TextAppearance.PomodoroTimer.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="lineHeight">40sp</item>
    </style>
    
    <style name="TextAppearance.PomodoroTimer.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="lineHeight">36sp</item>
    </style>
    
    <style name="TextAppearance.PomodoroTimer.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="lineHeight">28sp</item>
    </style>
    
    <style name="TextAppearance.PomodoroTimer.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="lineHeight">22sp</item>
        <item name="android:letterSpacing">0.0059</item>
    </style>
    
    <style name="TextAppearance.PomodoroTimer.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0.0294</item>
    </style>
    
    <style name="TextAppearance.PomodoroTimer.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.0167</item>
    </style>
    
    <style name="TextAppearance.PomodoroTimer.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.0059</item>
    </style>
    
    <style name="TextAppearance.PomodoroTimer.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Switch Style -->
    <style name="Widget.PomodoroTimer.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- Slider Style -->
    <style name="Widget.PomodoroTimer.Slider" parent="Widget.Material3.Slider">
        <item name="thumbRadius">10dp</item>
        <item name="trackHeight">4dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>
